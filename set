#include <set>
#include <iostream>
#include <bits/stdc++.h>


using namespace std;

string s;
set <char> st;

int main(){
	getline(cin, s);
	for(int i = 0; i < s.size() ; i++){
		if(s[i] == '.' || s[i] == ',' || s[i] == '!' ||
		   s[i] == ';' || s[i] == '?' || s[i] == ':') st.insert(s[i]);
	}	
	cout << st.size();
	return 0;
}
